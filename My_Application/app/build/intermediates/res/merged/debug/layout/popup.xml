<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="275sp"
    android:id="@+id/popup_element"
    android:background="#fff"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"

    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115sp"
        android:layout_weight="2"
        android:src="@drawable/fedo_logo"
        />
    <TextView
        android:layout_height="115sp" android:layout_width="match_parent"
        android:layout_weight="2"
        android:text="This test will ask you seven problems. You've to answer how often you have been bothered by them in last two weeks."
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <ImageButton
        android:layout_height="30sp" android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:src="@drawable/tick"
        android:id="@+id/btn_close_popup"/>
</LinearLayout>